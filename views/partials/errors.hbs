{{#if error}}
   <div class="alert alert-dismissible alert-danger fade show" role="alert">
        {{error}}
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div> 
{{/if}}

{{#each errors}}
    <div class="alert alert-dismissible alert-danger fade show" role="alert">
        {{msg}}
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/each}}